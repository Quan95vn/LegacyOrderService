{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LocalDb/orders.db"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30, 
          "fileSizeLimitBytes": 10485760, // Max 10MB 
          "rollOnFileSizeLimit": true
        }
      }
    ]
  }
}